<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.johnny.volumeprogram.MainActivity">

    <EditText
        android:id="@+id/a"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:gravity="left"
        android:hint="Lat. a"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/b"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/a"
        android:layout_toEndOf="@+id/a"
        android:layout_toRightOf="@+id/a"
        android:ems="10"
        android:gravity="left"
        android:hint="Lat. b"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/c"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/b"
        android:layout_toEndOf="@+id/b"
        android:layout_toRightOf="@+id/b"
        android:ems="10"
        android:gravity="left"
        android:hint="Lat. c"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/d"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/c"
        android:layout_toEndOf="@+id/c"
        android:layout_toRightOf="@+id/c"
        android:ems="10"
        android:gravity="left"
        android:hint="Lat. d"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/A"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/a"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/b"
        android:layout_toStartOf="@+id/b"
        android:ems="10"
        android:gravity="left"
        android:hint="Lat. A"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/B"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/A"
        android:layout_toEndOf="@+id/A"
        android:layout_toRightOf="@+id/A"
        android:ems="10"
        android:gravity="left"
        android:hint="Lat. B"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/C"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/B"
        android:layout_toLeftOf="@+id/d"
        android:layout_toStartOf="@+id/d"
        android:ems="10"
        android:gravity="left"
        android:hint="Lat. C"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/D"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/C"
        android:layout_toEndOf="@+id/C"
        android:layout_toRightOf="@+id/C"
        android:ems="10"
        android:gravity="left"
        android:hint="Lat. D"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/h"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/A"
        android:layout_marginTop="42dp"
        android:ems="10"
        android:gravity="left"
        android:hint="h piramida"
        android:nestedScrollingEnabled="true"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/H"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/h"
        android:layout_alignBottom="@+id/h"
        android:layout_alignLeft="@+id/B"
        android:layout_alignStart="@+id/B"
        android:ems="10"
        android:gravity="left"
        android:hint="H trunchi"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/diagJos"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_above="@+id/diagSus"
        android:layout_alignEnd="@+id/D"
        android:layout_alignRight="@+id/D"
        android:layout_toRightOf="@+id/imageView"
        android:ems="10"
        android:gravity="left"
        android:hint="Diag. jos"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/diagSus"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/diagJos"
        android:layout_alignRight="@+id/diagJos"
        android:layout_toRightOf="@+id/imageView"
        android:ems="10"
        android:gravity="left"
        android:hint="Diag. sus"
        android:numeric="decimal"
        android:selectAllOnFocus="true"
        android:singleLine="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClick"
        android:text="Volume" />

    <TextView
        android:id="@+id/volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diagSus"
        android:layout_centerHorizontal="true"
        android:background="#fe0000"
        android:singleLine="true"
        android:text="Result"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="150dp"
        android:layout_alignEnd="@+id/H"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/H"
        android:layout_below="@+id/h"
        android:src="@drawable/piras" />

</RelativeLayout>
